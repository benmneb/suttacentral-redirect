{
	"manifest_version": 3,
	"name": "SuttaCentral Redirect",
	"version": "1.2.0",
	"description": "Toggle between suttacentral.net and suttacentral.express",
	"permissions": ["storage", "activeTab", "declarativeNetRequest"],
	"host_permissions": ["*://suttacentral.net/*", "*://suttacentral.express/*"],
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "redirect_rules",
				"enabled": false,
				"path": "rules.json"
			}
		]
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
