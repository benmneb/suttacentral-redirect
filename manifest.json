{
	"manifest_version": 3,
	"name": "SuttaCentral Redirect",
	"version": "1.0.0",
	"description": "Toggle between suttacentral.net and suttacentral.express",
	"permissions": ["storage", "activeTab", "scripting"],
	"host_permissions": ["*://suttacentral.net/*", "*://suttacentral.express/*"],
	"browser_specific_settings": {
		"gecko": {
			"id": "@suttacentral-redirect",
			"strict_min_version": "58.0",
			"data_collection_permissions": {
				"required": ["none"]
			}
		}
	},
	"background": {
		"service_worker": "background.js",
		"scripts": ["background.js"]
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"32": "icon32.png",
			"48": "icon48.png",
			"128": "icon128.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
